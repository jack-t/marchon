<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_user_type"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    style="@style/AppTheme.IntroScreen"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.jacktownsend.marchon.UserTypeActivity">

    <ImageView
        android:layout_width="match_parent"
        app:srcCompat="@drawable/large"
        android:layout_centerHorizontal="true"
        android:id="@+id/imageView"
        android:layout_height="226dp" />

    <Button
        android:text="March On!"
        android:layout_width="match_parent"
        android:layout_marginTop="23dp"
        android:id="@+id/participantButton"
        android:layout_height="150dp"
        style="@style/AppTheme.IntroScreen.Button"
        android:textSize="36sp"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:onClick="proceed"
        android:tag="participant" />

    <Button
        android:text="Become an Organizer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/organizerButton"
        style="@style/AppTheme.IntroScreen.Button"
        android:textSize="18sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="proceed"
        android:tag="organizer" />

    <TextView
        android:text="Are you an organizer or do you want to become one?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_above="@+id/organizerButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp" />

</RelativeLayout>
