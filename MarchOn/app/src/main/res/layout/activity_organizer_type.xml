<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_organizer_type"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    style="@style/AppTheme.IntroScreen"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.jacktownsend.marchon.organizer.OrganizerTypeActivity">

    <Button
        android:text="New Organizer?"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="20dp"
        android:id="@+id/button"
        style="@style/AppTheme.IntroScreen.Button"
        android:textSize="36sp"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:onClick="onClick"
        android:tag="new" />

    <TextView
        android:text="or ..."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:id="@+id/textView4"
        android:textSize="24sp"
        android:textColor="@android:color/white" />

    <Button
        android:text="an existing one?"
        android:layout_width="match_parent"
        android:id="@+id/button3"
        style="@style/AppTheme.IntroScreen.Button"
        android:layout_height="60dp"
        android:textSize="24sp"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="onClick"
        android:tag="existing" />

    <TextView
        android:text="Be an organizer!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="58dp"
        android:id="@+id/textView2"
        android:textSize="36sp"
        android:textColor="@android:color/white"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Are you a..."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="39dp"
        android:id="@+id/textView3"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
